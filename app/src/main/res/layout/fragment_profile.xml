<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.fragment.profile.ProfileFragment">

    <TextView
        android:id="@+id/tv_title_fragment_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/poppins"
        android:text="@string/title_tv_fragment_profile"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_profile_fragment_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/light_green"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_fragment_profile"
        app:layout_constraintStart_toStartOf="@+id/tv_title_fragment_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_fragment_profile">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_photo_profile"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_photo_profile"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/CardRadius15" />

            <TextView
                android:id="@+id/tv_name_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/username"
                android:textColor="@color/dark_green"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_photo_profile"
                app:layout_constraintTop_toTopOf="@+id/iv_photo_profile" />

            <TextView
                android:id="@+id/tv_bio_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/user_bio"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/iv_photo_profile"
                app:layout_constraintEnd_toEndOf="@+id/tv_name_profile"
                app:layout_constraintStart_toStartOf="@+id/tv_name_profile"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_profile"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_setting_profile_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins"
        android:text="@string/title_setting_profile_fragment"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cv_profile_fragment_profile"
        app:layout_constraintStart_toStartOf="@+id/cv_profile_fragment_profile"
        app:layout_constraintTop_toBottomOf="@+id/cv_profile_fragment_profile" />

    <TextView
        android:id="@+id/tv_title_account_profile_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/title_account_profile_fragment"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_setting_profile_fragment"
        app:layout_constraintStart_toStartOf="@+id/tv_title_setting_profile_fragment"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_setting_profile_fragment" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_account_fragment_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_green"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_account_profile_fragment"
        app:layout_constraintStart_toStartOf="@+id/tv_title_account_profile_fragment"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_account_profile_fragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/icon_edit_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_edit_profile_fragment_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/background_button_transparent"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:text="@string/text_button_edit_profile"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_edit_profile"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/vector__4_"
                app:layout_constraintStart_toStartOf="@+id/iv_edit_profile"
                app:layout_constraintTop_toBottomOf="@+id/btn_edit_profile_fragment_profile" />

            <Button
                android:id="@+id/btn_language_fragment_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/background_button_transparent"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:text="@string/text_edit_language_fragment_profile"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/btn_edit_profile_fragment_profile"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/btn_edit_profile_fragment_profile" />

            <ImageView
                android:id="@+id/iv_edit_theme_fragment_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/vector__5_"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/btn_language_fragment_profile"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_edit_theme_fragment_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background_button_transparent"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:text="@string/text_edit_theme_fragment_profile"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btn_language_fragment_profile"
                app:layout_constraintStart_toEndOf="@+id/iv_edit_theme_fragment_profile"
                app:layout_constraintTop_toBottomOf="@+id/btn_language_fragment_profile" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title_action_profile_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/title_action_profile_fragment"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cv_account_fragment_profile"
        app:layout_constraintStart_toStartOf="@+id/cv_account_fragment_profile"
        app:layout_constraintTop_toBottomOf="@+id/cv_account_fragment_profile" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_action_fragment_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_green"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_action_profile_fragment"
        app:layout_constraintStart_toStartOf="@+id/tv_title_action_profile_fragment"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_action_profile_fragment"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_logout_fragment_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/vector__6_"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_logout_fragment_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/background_button_transparent"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center_vertical"
                android:text="@string/logout"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_logout_fragment_profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>